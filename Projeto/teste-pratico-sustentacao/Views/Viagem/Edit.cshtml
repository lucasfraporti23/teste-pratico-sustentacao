@model teste_pratico_sustentacao.Models.Viagem

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Viagem</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Id" class="control-label">Id</label>
                <input disabled asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="LocalSaida" class="control-label">Local de Saída </label>
                <input asp-for="LocalSaida" class="form-control" />
                <span asp-validation-for="LocalSaida" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="LocalEntrega" class="control-label">Local de Entrega</label>
                <input asp-for="LocalEntrega" class="form-control" />
                <span asp-validation-for="LocalEntrega" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="DataViagem" class="control-label">Data da Viagem</label>
                <input asp-for="DataViagem" class="form-control" />
                <span asp-validation-for="DataViagem" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Km" class="control-label">Distância da viagem</label>
                <input asp-for="Km" class="form-control" />
                <span asp-validation-for="Km" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="MotoristaId" class="control-label">Motorista</label>
                <input asp-for="MotoristaId" class="form-control" />
                <span asp-validation-for="MotoristaId" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <hr />
            <div class="form-group">
                <div class="btn-group float-right">
                    <a class="btn btn-danger" asp-action="Index">Voltar</a>
                    <button class="btn btn-success"><input type="submit" value="Save" hidden />Salvar</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
